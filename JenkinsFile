pipeline {
    agent any

    parameters {
        gitParameter branchFilter: 'origin/(.*)', defaultValue: 'main', name: 'BRANCH', type 'PT_BRANCH'
    }

    stages {
        stage('Checkout'){
            echo 'Grabbing source code..'
            steps {
                git branch: "${params.BRANCH}", url: 'https://github.com/preston-aoki/testDemo.git'
            }
        }

        stage('Setup'){
            steps {
                echo 'Restoring Nuget packages'
                sh "dotnet restore"

                echo 'Cleaning solution'
                sh "dotnet clean"
            }
        }

        stage('Build'){
            echo 'Building..'
            sh "dotnet build --configuration Release"
        }

        stage('Test'){
            echo 'Testing..'
            sh "dotnet test"
        }

        stage('Publish'){
            echo 'Deploying..'
        }

    }
}